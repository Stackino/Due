main.home {
    height: 100vh;
    margin: 0 auto;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 7.6rem;
}

.theme-container .theme-default-content:not(.custom), 
.theme-container .page-edit, 
.theme-container .page-nav {
    max-width: none;
}

iframe[src^="https://codesandbox"] {
    width: 100%;
    height: 600px;
    border: solid 5px rgb(36, 40, 42);
    background-color: rgb(36, 40, 42);
    border-radius: 4px;
    overflow: hidden;
}